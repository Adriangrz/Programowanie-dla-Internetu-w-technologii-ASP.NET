@model NetworkOfShops.Models.Bill
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Bill</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreationDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreationDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ToPay)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ToPay)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Shop)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Shop.Description)
        </dd>
        @foreach (var item in Model.ProductsInBill)
        {
            <dt class="col-sm-3">
                @Html.DisplayNameFor(m => item.Amount)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(m => item.Amount)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(m => item.Price)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(m => item.Price)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(m => item.ProductInShopId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(m => item.ProductInShopId)
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
